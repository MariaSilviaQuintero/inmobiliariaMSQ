@model IEnumerable<Inmobiliaria_.Net_Core.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h3>Pagos</h3>

<p>
    <a class="btn btn-outline-light" style="background-color: #FF8300" asp-action="Create">AGREGAR NUEVO</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                NUMERO DE PAGO
            </th>
            <th>
                INQUILINO
            </th>
            <th>
                DIRECCION ALQUILER
            </th>
            <th>
                FECHA
            </th>
            <th>
                IMPORTE
            </th>
            <th>
                ACCIONES
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NroPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alquiler.Inquilino.Apellido)
                    @Html.DisplayFor(modelItem => item.Alquiler.Inquilino.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Alquiler.Inmueble.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Importe)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPago" title="Editar"><span class="lnr lnr-pencil"></span></a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.IdPago" title="Eliminar"><span class="lnr lnr-cross"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
