@model Inmobiliaria_.Net_Core.Models.Pago

@{
    ViewData["Title"] = "Edit";
}

<h4>Editar Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-light" style="background-color: #FF8300" />
                <a class="btn btn-outline-light" style="background-color: #FF8300" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

