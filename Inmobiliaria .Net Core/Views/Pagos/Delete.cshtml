@model Inmobiliaria_.Net_Core.Models.Pago

@{
    ViewData["Title"] = "Delete";
}

<h4>Pago</h4>

<h6>¿Seguro que desea eliminar el pago?</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            NUMERO DE PAGO:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NroPago)
        </dd>
        <dt class="col-sm-2">
            DIRECCION:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alquiler.Inmueble.Direccion)
        </dd>
        <dt class="col-sm-2">
            INQUILINO:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alquiler.Inquilino.Apellido)
            @Html.DisplayFor(model => model.Alquiler.Inquilino.Nombre)
        </dd>
        <dt class="col-sm-2">
            FECHA:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            IMPORTE:
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-outline-light" style="background-color: #FF8300" />
        <a class="btn btn-outline-light" style="background-color: #FF8300" asp-action="Index">Volver al listado</a>
    </form>
</div>

