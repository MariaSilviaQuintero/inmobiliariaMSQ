@model Inmobiliaria_.Net_Core.Models.LoginView

@{
    ViewData["Title"] = "Index";
}

@*<div style="text-align:center"><img src="https://www.hochimin.com.pe/wp-content/uploads/2019/05/LOGOS-WEB_HOCHIMIN-32.jpg" width="500" height="500" /></div>*@


<h3>Login</h3>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar" class="btn btn-outline-light" style="background-color: #FF8300" />
                <a class="btn btn-outline-light" style="background-color: #FF8300" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

